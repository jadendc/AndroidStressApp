<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E9AAF">

   <ImageView
       android:id="@+id/imageView3"
       android:layout_width="155dp"
       android:layout_height="166dp"
       android:layout_marginTop="32dp"
       android:layout_marginBottom="533dp"
       android:contentDescription="@string/how_ru_life_logo"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/logo" />


   <ImageView
       android:id="@+id/backButton"
       android:layout_width="40dp"
       android:layout_height="43dp"
       android:layout_marginStart="30dp"
       android:layout_marginTop="32dp"
       android:layout_marginEnd="60dp"
       android:layout_marginBottom="204dp"
       android:contentDescription="@string/sound_button"
       app:layout_constraintBottom_toTopOf="@+id/toggleWaves"
       app:layout_constraintEnd_toStartOf="@+id/imageView3"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/backbutton"
       app:tint = "#F2E9E4"/>


   <ToggleButton
       android:id="@+id/toggleRain"
       android:layout_width="100dp"
       android:layout_height="48dp"
       android:layout_marginStart="10dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="10dp"
       android:background="#61a5c2"
       android:checked="false"
       android:textColor="@color/white"
       android:textOff="@string/rain"
       android:textOn="@string/rain"
       app:layout_constraintEnd_toStartOf="@+id/toggleMeditation"
       app:layout_constraintStart_toEndOf="@+id/toggleForest"
       app:layout_constraintTop_toBottomOf="@+id/toggleBirds" />

   <ToggleButton
       android:id="@+id/toggleWaves"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="60dp"
       android:layout_marginTop="17dp"
       android:layout_marginEnd="10dp"
       android:background="#61a5c2"
       android:checked="false"
       android:text="@string/waves"
       android:textColor="@android:color/white"
       android:textOff="@string/waves"
       android:textOn="@string/waves"
       app:layout_constraintEnd_toStartOf="@+id/toggleBirds"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />

   <ToggleButton
       android:id="@+id/toggleFire"
       android:layout_width="100dp"
       android:layout_height="wrap_content"

       android:layout_marginStart="10dp"
       android:layout_marginTop="17dp"
       android:layout_marginEnd="60dp"
       android:background="#61a5c2"
       android:checked="false"
       android:text="@string/fire"
       android:textColor="@android:color/white"
       android:textOff="@string/fire"
       android:textOn="@string/fire"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/toggleBirds"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />

   <ToggleButton
       android:id="@+id/toggleForest"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="60dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="10dp"
       android:background="#2A6F97"
       android:checked="false"
       android:text="@string/forest"
       android:textColor="@android:color/white"
       android:textOff="@string/forest"
       android:textOn="@string/forest"
       app:layout_constraintEnd_toStartOf="@+id/toggleRain"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/toggleWaves" />

   <ToggleButton
       android:id="@+id/toggleMeditation"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="60dp"
       android:background="#2A6F97"
       android:checked="false"
       android:text="@string/meditation"
       android:textColor="@android:color/white"
       android:textOff="@string/meditation"
       android:textOn="@string/meditation"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/toggleRain"
       app:layout_constraintTop_toBottomOf="@+id/toggleFire" />

   <ToggleButton
       android:id="@+id/toggleBirds"
       android:layout_width="100dp"
       android:layout_height="48dp"
       android:layout_marginStart="10dp"
       android:layout_marginTop="17dp"
       android:layout_marginEnd="10dp"
       android:background="#2A6F97"
       android:checked="false"
       android:text="@string/birds"
       android:textColor="@android:color/white"
       android:textOff="@string/birds"
       android:textOn="@string/birds"
       app:layout_constraintEnd_toStartOf="@+id/toggleFire"
       app:layout_constraintStart_toEndOf="@+id/toggleWaves"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />

   <TextView
       android:id="@+id/textView6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="120dp"
       android:layout_marginTop="16dp"
       android:layout_marginEnd="118dp"
       android:layout_marginBottom="479dp"
       android:text="@string/sound_choice"
       android:textColor="@color/white"
       android:textSize="28sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.499"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView3"
       app:layout_constraintVertical_bias="0.112" />

   <TextView
       android:id="@+id/textView7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="90dp"
       android:layout_marginTop="160dp"
       android:layout_marginEnd="90dp"
       android:layout_marginBottom="265dp"
       android:text="@string/number_of_cycles"
       android:textColor="@color/white"
       android:textSize="28sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />

   <ToggleButton
       android:id="@+id/cycle1"
       android:layout_width="88dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="60dp"
       android:layout_marginTop="22dp"
       android:layout_marginEnd="20dp"
       android:background="#2A6F97"
       android:checked="false"
       android:text="@string/_1"
       android:textColor="@android:color/white"
       android:textOff="@string/_1"
       android:textOn="@string/_1"
       app:layout_constraintEnd_toStartOf="@+id/cycle2"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />

   <ToggleButton
       android:id="@+id/cycle2"
       android:layout_width="88dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="10dp"
       android:background="#2A6F97"
       android:checked="false"
       android:text="@string/_2"
       android:textColor="@android:color/white"
       android:textOff="@string/_2"
       android:textOn="@string/_2"
       app:layout_constraintEnd_toStartOf="@+id/cycle3"
       app:layout_constraintStart_toEndOf="@+id/cycle1"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />

   <ToggleButton
       android:id="@+id/cycle3"
       android:layout_width="88dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="22dp"
       android:layout_marginEnd="60dp"
       android:background="#2A6F97"
       android:checked="false"
       android:text="@string/_3"
       android:textColor="@android:color/white"
       android:textOff="@string/_3"
       android:textOn="@string/_3"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/cycle2"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />

   <ToggleButton
       android:id="@+id/cycle10"
       android:layout_width="88dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="90dp"
       android:background="#2A6F97"
       android:checked="false"
       android:text="@string/_10"
       android:textColor="@android:color/white"
       android:textOff="@string/_10"
       android:textOn="@string/_10"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/cycle5"
       app:layout_constraintTop_toBottomOf="@+id/cycle2" />

   <ToggleButton
       android:id="@+id/cycle5"
       android:layout_width="88dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="90dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:background="#2A6F97"
       android:checked="false"
       android:text="@string/_5"
       android:textColor="@android:color/white"
       android:textOff="@string/_5"
       android:textOn="@string/_5"
       app:layout_constraintEnd_toStartOf="@+id/cycle10"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/cycle2" />

  <Button
      android:id="@+id/nextButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="161dp"
      android:layout_marginEnd="162dp"
      android:layout_marginBottom="72dp"
      android:backgroundTint="#4A4E69"
      android:text="@string/next"
      android:textColor="@android:color/white"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cycle10"
      app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
